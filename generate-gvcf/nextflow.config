params{
  project_name = "project_name"
  sample_sheet = "/path_to_samplesheet"
  sample_coverage = "high"
  out_dir = "/path_to_outdir"

  ref_seq = "/path_to_reference"
  dbsnp_sites = "/path_to_dbsnp_sites"

}

process{

    cache = true

    withLabel: gatk {
         container = 'docker://broadinstitute/gatk:4.1.3.0'
    }

    cpus = 1
    memory = 4.GB
    time = 96.h
    errorStrategy = 'retry'
    maxRetries = 5
    maxErrors = 1000
}

executor{
    jobName = { "$task.tag" }
}

profiles {
   standard {
        process.executor = 'local'
   }
   ilifu {
        process.executor = 'slurm'
        process.queue = 'Main'
    }
   wits {
        process.executor = 'slurm'
        process.queue = 'batch'
    }
   cbio {
         process.executor = 'pbs'
         process.queue = 'dev'
   }

}

trace {
    enabled = true
    file = "${params.project_name}.trace.txt"
}

singularity {
  autoMounts = true
  enabled = true
}

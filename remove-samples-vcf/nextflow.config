params{
  project_name = "ri"
  cohort_id =  "v6"
  out_dir = "/scratch3/users/gerrit/projects/refimpute/v6/nextflow-out-remove-samples-vcf-agvd"
  in_files = "/cbio/projects/001/ref-panels/v6/filter-vcf-genotype-refinement/v6.cgp.vf.va.filter-pass.vcf.gz*"
  remove_samples = "/users/gerrit/projects/refimpute/varcall/remove-samples-vcf/v6.agvd.remove.tsv"

  build = "b38"
}

executor{
    jobName = { "$task.tag" }
    queueSize = 100
    submitRateLimit = '10 min' // submit 10 jobs per minute
}

process {
    cache = true

    withLabel: bcftools {
         container = 'docker://quay.io/grbot/bcftools'
    }

    withLabel: gatk {
         container = 'docker://broadinstitute/gatk:4.1.3.0'
    }

    cpus = 1
    memory = 4.GB
    time = 336.h
    errorStrategy = 'retry'
    maxRetries = 5
    maxErrors = 1000

}

profiles {
    standard {
        process.executor = 'local'
    }
    ilifu {
        process.executor = 'slurm'
        process.queue = 'Main'
    }
    wits {
        process.executor = 'slurm'
        process.queue = 'batch'
    }
    cbio {
         process.executor = 'pbs'
         process.queue = 'dev'
    }
}

trace {
    enabled = true
    file = "${params.project_name}.trace.txt"
}

singularity {
  autoMounts = true
  enabled = true
  cacheDir = "${HOME}/.singularity"
}
